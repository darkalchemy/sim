{
  "name": "horyzone/sim",
  "description": "PHP framework based on a custom skeleton slim with configuration setting by yaml format and other",
  "keywords": [
    "framework",
    "slim",
    "twig",
    "doctrine",
    "validation",
    "csrf",
    "token",
    "dotenv",
    "tracy",
    "yaml"
  ],
  "homepage": "https://github.com/Horyzone/sim",
  "license": "MIT",
  "authors": [
    {
      "name": "SimonDevelop",
      "email": "contact@simon-micheneau.fr"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "app/src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.1.3",
    "horyzone/sim-src": "^0.0.10",
    "respect/validation": "^1.1",
    "slim/csrf": "^0.8.3",
    "digitalnature/php-ref": "^1.2",
    "php-school/cli-menu": "^3.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.3",
    "phpunit/phpunit": "~7.5.0"
  },
  "config": {
    "process-timeout" : 0
  },
  "scripts": {
    "post-install-cmd": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "start": "php -S localhost:8080 -t public public/index.php",
    "phpcs": "phpcs -s",
    "phpunit": "phpunit --colors",
    "test": [
      "@phpunit",
      "@phpcs"
    ]
  }
}
